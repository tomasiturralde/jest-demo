{
  "linters": {
    "package.json": ["sort-package-json", "prettier --write", "git add"],
    "*.md": ["prettier --write", "git add"],
    "*.{js,json}": ["prettier --write", "git add"],
    "*.{ts}": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  }
}
